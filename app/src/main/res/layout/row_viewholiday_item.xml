<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding"
    android:layout_marginRight="@dimen/padding"
    android:layout_marginBottom="1dp"
    android:gravity="right"
    android:orientation="horizontal"
    android:weightSum="7">

    <TextView
        android:id="@+id/TB_CHOLIDAY_NAME"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_weight="1.75"
        android:background="@color/icons"
        android:gravity="center"
        android:padding="1dp"
        android:text="نوع الاجازة"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/TB_EMPHOLIDAYS_HCOUNT"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_weight="0.75"
        android:background="@color/icons"
        android:gravity="center"
        android:padding="1dp"
        android:text="المدة"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TB_EMPHOLIDAYS_STARTDATE"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_weight="1.25"
        android:background="@color/icons"
        android:gravity="center"
        android:padding="1dp"
        android:text="البداية"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/TB_EMPHOLIDAYS_ENDDATE"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_weight="1.25"
        android:background="@color/icons"
        android:gravity="center"
        android:padding="1dp"
        android:text="النهاية"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/C_ASSIST_NAME_AR"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="1dp"
        android:layout_weight="2"
        android:background="@color/icons"
        android:gravity="center"
        android:padding="1dp"
        android:text="الحالة"
        android:textColor="@color/secondary_text"
        android:textSize="14sp" />


</LinearLayout>



