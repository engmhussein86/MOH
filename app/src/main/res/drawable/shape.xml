<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:color="@color/divider"></solid>

            <stroke android:width="2dp" android:color="@color/black_overlay"></stroke>

            <padding android:bottom="5dp" android:left="10dp" android:right="20dp" android:top="5dp"></padding>


            <corners android:radius="11dp"></corners>

        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:color="@color/icons"></solid>

            <stroke android:width="2dp" android:color="@color/black_overlay"></stroke>

            <padding android:bottom="5dp" android:left="20dp" android:right="20dp" android:top="5dp"></padding>


            <corners android:radius="11dp"></corners>

        </shape>

    </item>
</selector>
