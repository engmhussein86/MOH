<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:color="@color/black_overlay"></solid>

            <stroke android:width="2dp" android:color="@color/colorPrimary"></stroke>

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"></padding>

            <corners android:radius="11dp"></corners>

        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <solid android:color="@color/colorPrimary"></solid>

            <stroke android:width="2dp" android:color="@color/black_overlay"></stroke>

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"></padding>

            <corners android:radius="11dp"></corners>

        </shape>
    </item>
</selector>